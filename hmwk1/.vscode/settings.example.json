{
    "ocaml.format": {
        "auto": true,
        "command": "ocamlformat",
        "args": ["--enable-outside-detected-project", "${file}"],
        "debounce": 1000,
        "inPlace": true,
        "onSave": true,
        "profile": "default",
        "restartOnSave": false
    },
    "ocaml.lsp.path": "opam exec -- lsp-server",
    "ocaml.trace.server": "off",
    "ocaml.diagnostics.debouncer": "off",
    "ocaml.lsp.workspaceFolders.ignore": [
        "._build",
        "node_modules",
        "lib",
        "_opam"
    ],
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.wordWrap": "off",
    "editor.autoIndent": "smart",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false
}
